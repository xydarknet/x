#!/bin/bash
# ◦•●◉✿ Add VLESS WS by xydark ✿◉●•◦

# === CONFIG ===
domain=$(cat /etc/xray/domain)
user=vless-$(tr -dc a-z0-9 </dev/urandom | head -c4)
uuid=$(uuidgen)
exp_days=30
exp_date=$(date -d "$exp_days days" +"%Y-%m-%d")
tel_token=$(cat /etc/xydark/bot-token)
tel_chatid=$(cat /etc/xydark/owner-id)

# === TAMBAH KE CONFIG XRAY ===
cat <<EOF >> /etc/xray/config.json
### $user $exp_date
{
  "id": "$uuid",
  "email": "$user"
},
EOF

# === LINK VLESS TLS / NON-TLS ===
port_tls=443
port_ntls=80
vless_tls="vless://$uuid@$domain:$port_tls?type=ws&encryption=none&host=$domain&path=/vless&security=tls#$user"
vless_ntls="vless://$uuid@$domain:$port_ntls?type=ws&encryption=none&host=$domain&path=/vless&security=none#$user"

# === QR CODE GENERATE ===
qr_dir="/etc/xray/qr"
mkdir -p "$qr_dir"
qrencode -o "$qr_dir/$user-tls.png" "$vless_tls"
qrencode -o "$qr_dir/$user-ntls.png" "$vless_ntls"

# === TAMPILKAN AKUN DI CLI ===
clear
echo -e "\e[1;36m╔════════════════════════════════════════════╗"
echo -e "║         BERHASIL BUAT AKUN VLESS          ║"
echo -e "╠════════════════════════════════════════════╣"
echo -e "║ Username : $user"
echo -e "║ Domain   : $domain"
echo -e "║ UUID     : $uuid"
echo -e "║ Expired  : $exp_date"
echo -e "╠════════════════════════════════════════════╣"
echo -e "║ TLS Link     :\n\e[1;33m$vless_tls\e[0m"
echo -e "║ Non-TLS Link :\n\e[1;33m$vless_ntls\e[0m"
echo -e "╚════════════════════════════════════════════╝\e[0m"

# === KIRIM KE TELEGRAM ===
curl -s -X POST https://api.telegram.org/bot$tel_token/sendMessage \
 -d chat_id="$tel_chatid" \
 -d parse_mode="Markdown" \
 -d text="🆕 *Akun VLESS WS Berhasil Dibuat!*

\`\`\`
Username : $user
Domain   : $domain
UUID     : $uuid
Expired  : $exp_date
\`\`\`

🔐 *VLESS TLS:*
\`$vless_tls\`

🔓 *VLESS Non-TLS:*
\`$vless_ntls\`

👤 Dibuat oleh Script @xydark"

# === RESTART XRAY ===
systemctl restart xray

# === SELESAI ===
echo -e "\n\e[1;32m✅ Akun VLESS $user berhasil dibuat dan dikirim ke Telegram!\e[0m"
read -n 1 -s -r -p "Tekan tombol apapun untuk kembali ke menu..."
menu-xray
