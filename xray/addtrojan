#!/bin/bash
# ◦•●◉✿ Add Trojan WS by xydark ✿◉●•◦

# === CONFIG ===
domain=$(cat /etc/xray/domain)
user=trojan-$(tr -dc a-z0-9 </dev/urandom | head -c4)
uuid=$(uuidgen)
exp_days=30
exp_date=$(date -d "$exp_days days" +"%Y-%m-%d")
tel_token=$(cat /etc/xydark/bot-token)
tel_chatid=$(cat /etc/xydark/owner-id)

# === TAMBAH KE CONFIG XRAY ===
cat <<EOF >> /etc/xray/config.json
### $user $exp_date
{
  "password": "$uuid",
  "email": "$user"
},
EOF

# === LINK TROJAN TLS / NON-TLS ===
port_tls=443
port_ntls=80
trojan_tls="trojan://$uuid@$domain:$port_tls?type=ws&security=tls&host=$domain&path=/trojan#$user"
trojan_ntls="trojan://$uuid@$domain:$port_ntls?type=ws&security=none&host=$domain&path=/trojan#$user"

# === QR CODE GENERATE ===
qr_dir="/etc/xray/qr"
mkdir -p "$qr_dir"
qrencode -o "$qr_dir/$user-tls.png" "$trojan_tls"
qrencode -o "$qr_dir/$user-ntls.png" "$trojan_ntls"

# === TAMPILKAN AKUN DI CLI ===
clear
echo -e "\e[1;35m╔════════════════════════════════════════════╗"
echo -e "║         BERHASIL BUAT AKUN TROJAN         ║"
echo -e "╠════════════════════════════════════════════╣"
echo -e "║ Username : $user"
echo -e "║ Domain   : $domain"
echo -e "║ UUID     : $uuid"
echo -e "║ Expired  : $exp_date"
echo -e "╠════════════════════════════════════════════╣"
echo -e "║ TLS Link     :\n\e[1;33m$trojan_tls\e[0m"
echo -e "║ Non-TLS Link :\n\e[1;33m$trojan_ntls\e[0m"
echo -e "╚════════════════════════════════════════════╝\e[0m"

# === KIRIM KE TELEGRAM ===
curl -s -X POST https://api.telegram.org/bot$tel_token/sendMessage \
 -d chat_id="$tel_chatid" \
 -d parse_mode="Markdown" \
 -d text="🆕 *Akun Trojan WS Berhasil Dibuat!*

\`\`\`
Username : $user
Domain   : $domain
UUID     : $uuid
Expired  : $exp_date
\`\`\`

🔐 *Trojan TLS:*
\`$trojan_tls\`

🔓 *Trojan Non-TLS:*
\`$trojan_ntls\`

👤 Dibuat oleh Script @xydark"

# === RESTART XRAY ===
systemctl restart xray

# === SELESAI ===
echo -e "\n\e[1;32m✅ Akun Trojan $user berhasil dibuat dan dikirim ke Telegram!\e[0m"
read -n 1 -s -r -p "Tekan tombol apapun untuk kembali ke menu..."
menu-xray
