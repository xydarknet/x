#!/bin/bash
# ◦•●◉✿ Add VMESS WS by xydark ✿◉●•◦

# === CONFIG ===
domain=$(cat /etc/xray/domain)
read -rp "Masukkan username: " user
[[ -z "$user" ]] && user="vmess-$(tr -dc a-z0-9 </dev/urandom | head -c4)"

read -rp "Masukkan masa aktif (hari): " exp_days
[[ -z "$exp_days" ]] && exp_days=30

uuid=$(uuidgen)
exp_date=$(date -d "$exp_days days" +"%Y-%m-%d")
tel_token=$(cat /etc/xydark/bot-token)
tel_chatid=$(cat /etc/xydark/owner-id)

# === CEK DUPLIKAT ===
if grep -qw "$user" /etc/xray/config.json; then
    echo -e "\e[1;31mUsername sudah ada, batalkan.\e[0m"
    exit 1
fi

# === TAMBAH KE CONFIG XRAY ===
sed -i "/#vmess$/a\### $user $exp_date\
},{\"id\": \"$uuid\",\"alterId\": 0,\"email\": \"$user\"" /etc/xray/config.json

# === LINK VMESS TLS / NON-TLS ===
port_tls=443
port_ntls=80

vmess_json_tls=$(cat <<EOF
{
  "v": "2",
  "ps": "$user",
  "add": "$domain",
  "port": "$port_tls",
  "id": "$uuid",
  "aid": "0",
  "net": "ws",
  "path": "/vmessws",
  "type": "none",
  "host": "$domain",
  "tls": "tls"
}
EOF
)

vmess_json_ntls=$(cat <<EOF
{
  "v": "2",
  "ps": "$user",
  "add": "$domain",
  "port": "$port_ntls",
  "id": "$uuid",
  "aid": "0",
  "net": "ws",
  "path": "/vmessws",
  "type": "none",
  "host": "$domain",
  "tls": "none"
}
EOF
)

vmess_tls="vmess://$(echo "$vmess_json_tls" | base64 -w0)"
vmess_ntls="vmess://$(echo "$vmess_json_ntls" | base64 -w0)"

# === QR CODE GENERATE ===
qr_dir="/etc/xray/qr"
mkdir -p "$qr_dir"
qrencode -o "$qr_dir/$user-vmess-tls.png" "$vmess_tls"
qrencode -o "$qr_dir/$user-vmess-ntls.png" "$vmess_ntls"

# === TAMPILKAN DI TERMINAL ===
clear
echo -e "\e[1;36m╔════════════════════════════════════════════╗"
echo -e "║         BERHASIL BUAT AKUN VMESS          ║"
echo -e "╠════════════════════════════════════════════╣"
echo -e "║ Username : $user"
echo -e "║ Domain   : $domain"
echo -e "║ UUID     : $uuid"
echo -e "║ Expired  : $exp_date"
echo -e "╠════════════════════════════════════════════╣"
echo -e "║ TLS Link     :"
echo -e "\e[1;33m$vmess_tls\e[0m"
echo -e "║ Non-TLS Link :"
echo -e "\e[1;33m$vmess_ntls\e[0m"
echo -e "╚════════════════════════════════════════════╝\e[0m"

# === KIRIM KE TELEGRAM ===
escaped_tls=$(echo "$vmess_tls" | sed 's/_/\\_/g')
escaped_ntls=$(echo "$vmess_ntls" | sed 's/_/\\_/g')
curl -s -X POST https://api.telegram.org/bot$tel_token/sendMessage \
 -d chat_id="$tel_chatid" \
 -d parse_mode="Markdown" \
 -d text="🆕 *Akun VMESS WS Berhasil Dibuat!*

*Username:* \`$user\`
*Domain:* \`$domain\`
*UUID:* \`$uuid\`
*Expired:* \`$exp_date\`

🔐 *TLS Link:*
\`$escaped_tls\`

🔓 *Non-TLS Link:*
\`$escaped_ntls\`

👤 Dibuat oleh Script @xydark"

# === RESTART XRAY ===
systemctl restart xray

# === SELESAI ===
echo -e "\n\e[1;32m✅ Akun VMESS $user berhasil dibuat dan dikirim ke Telegram!\e[0m"
read -n 1 -s -r -p "Tekan tombol apapun untuk kembali ke menu..."
menu-xray
